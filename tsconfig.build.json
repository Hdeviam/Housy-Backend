{
  "extends": "./tsconfig.json",
  "exclude": [
    "node_modules", // Directorio de dependencias de npm
    "test", // Pruebas unitarias/e2e
    "dist", // Carpeta de salida generada
    "**/*.spec.ts", // Archivos de prueba (unitarias)
    "**/*.e2e-spec.ts", // Archivos de test e2e (si usas Jest/Supertest)
    "**/*.d.ts" // Tipos globales si no son necesarios
  ],
  "include": [
    "src/**/*.ts" // Solo compila archivos .ts dentro de src
  ]
}
